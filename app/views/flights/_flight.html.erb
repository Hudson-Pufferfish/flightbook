<div class="container table-container">
  <table class="table table-light shadow-sm">
    <thead class = "table-head">
      <tr>
        <th scope="col">Flight #</th>
        <th scope="col">Departs</th>
        <th scope="col">Arrives</th>
        <th scope="col">Date</th>
        <th scope="col">Departure</th>
        <th scope="col">Duration</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= flight.formatted_flight_number %></td>
        <td><%= flight.origin.code %></td>
        <td><%= flight.destination.code %></td>
        <td><%= flight.formatted_date %></td>
        <td><%= flight.formatted_time %></td>
        <td><%= flight.formatted_duration %></td>
      </tr>
    </tbody>
  </table>
</div>
